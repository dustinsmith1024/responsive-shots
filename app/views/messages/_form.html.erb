<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@message.errors.count, "error") %> prohibited this screenshot from being saved:</p>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %>: <br />
    <%= f.text_field :url, placeholder: 'http://responsiveshots.com' %>
  </div>
  <div class="field">
    <%= f.label :email %>: <br />
    <%= f.text_field :email, placeholder: "you@gmail.com" %>
  </div>

  <h3>Screen Sizes:</h3>
  <ul class="inline-icon-list">
    <% Size.common.each do |size| %>
      <li>
          <%= size_check_box size.id, @message.has_screenshot_with_size?(size.id) %>
          <%= message_icon size, @message.has_screenshot_with_size?(size.id) %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit 'Send Screenshots' %>
  </div>
<% end %>
